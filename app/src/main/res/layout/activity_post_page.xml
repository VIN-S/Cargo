<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PostPage">

    <TextView
        android:id="@+id/post_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="#e7e6e6"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:clickable="true"
        android:contextClickable="true"
        android:id="@+id/postpage_scrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="300px"
                    android:background="@drawable/postpage" />

                <TextView
                    android:id="@+id/post_page_slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:gravity="left"
                    android:textColor="#fbfbfb" />
            </LinearLayout>


            <LinearLayout
                android:layout_below="@id/post_page_slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="30px"
                        android:background="@drawable/radiohead" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post_page_creatorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25px"
                            android:layout_marginTop="40px"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25px"
                            android:layout_marginTop="10px"
                            android:id="@+id/post_page_contact"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px">

                    <TextView
                        android:id="@+id/post_page_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_marginTop="20px"
                        android:textColor="#000000"
                        android:textSize="13dp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="25px"
                    android:layout_marginTop="20px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/post_page_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_departure_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_number_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_seats_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/post_page_requirements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    tools:context="com.example.vin_s.cargo.PostActivity">

                    <TextView
                        android:id="@+id/newComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Write Comments:  "
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/newComment_edit"
                        android:layout_width="338dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:background="#eeeeee"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/search_button"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/departureDateText"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="280dp"
                        android:layout_marginTop="3dp"
                        android:background="#38ade8"
                        android:onClick="submitComment"
                        android:text="Post" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#aaaaaa" />

                <LinearLayout
                    android:id="@+id/commentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/commentsLayout">
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/postpage_tab_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:gravity="bottom">

        <Button
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:id="@+id/postpage_home_button"
            android:background="@drawable/main_icon"
            android:layout_alignParentBottom="true"
            android:onClick="redirectToHome"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:id="@+id/postpage_search_button"
            android:background="@drawable/search_icon"
            android:layout_alignParentBottom="true"
            android:onClick="redirectToSearch"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:id="@+id/postpage_createpost_button"
            android:background="@drawable/createpost_icon"
            android:layout_alignParentBottom="true"
            android:onClick="redirectToCreatePost"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:id="@+id/postpage_profile_button"
            android:background="@drawable/profile_icon"
            android:layout_alignParentBottom="true"
            android:onClick="redirectToProfile"/>


        <Button
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:id="@+id/postpage_logout_button"
            android:background="@drawable/logout_icon"
            android:layout_alignParentBottom="true"
            android:onClick="logout"/>

    </LinearLayout>
</LinearLayout>