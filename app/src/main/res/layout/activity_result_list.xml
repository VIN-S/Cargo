<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ResultList">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Trips Awaiting You"
        android:textColor="#000000"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="0px"
        android:background="#e7e6e6"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showPostPage"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="20px"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/imageView1"
                    android:background="@drawable/result_1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:id="@+id/org_des"
                        android:text="[Last Slot] Stockholm - Lÿòveldiò ísland, 8 DAYS"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:id="@+id/postContent"
                        android:text="Our trip will go from Prague all the way to Budapest, passing Český Krumlov for one night. We will use a very nice car which can fit in 6 people in total."
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="showPostPage"
                android:layout_marginTop="40px">

                <ImageView
                    android:layout_marginBottom="50px"
                    android:layout_marginLeft="20px"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/imageView2"
                    android:background="@drawable/result_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Prague - Český Krumlov - Budapest, 5 DAYS"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="We will have a compact journey from Prague all the way to Budapest, passing Český Krumlov for one night. We will use a very nice car which can fit in 9 people in total."
                        android:textColor="#000000"/>


                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:onClick="showPostPage"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginBottom="50px"
                    android:layout_marginLeft="20px"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/imageView3"
                    android:background="@drawable/result_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Prague - Český Krumlov - Budapest, 8 DAYS"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="Our trip will go from Prague all the way to Budapest, passing Český Krumlov for one night. We will use a very nice car which can fit in 6 people in total."
                        android:textColor="#000000"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout
                android:onClick="showPostPage"
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginBottom="50px"
                    android:layout_marginLeft="20px"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/imageView4"
                    android:background="@drawable/result_4" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Prague - Český Krumlov - Budapest, 5 DAYS"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_marginLeft="30px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="We will have a compact journey from Prague all the way to Budapest, passing Český Krumlov for one night. We will use a very nice car which can fit in 9 people in total."
                        android:textColor="#000000"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>