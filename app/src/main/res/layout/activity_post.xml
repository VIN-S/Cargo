<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vin_s.cargo.PostActivity"
    android:background="#ffffff"
    android:weightSum="1"
    android:orientation="vertical">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/post_upload"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TRALVEL INFO"
                android:id="@+id/textView"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Title:  "
                    android:textColor="#000000"
                    android:id="@+id/postTitle" />

                <EditText android:id="@+id/post_title_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Slogan:  "
                    android:textColor="#000000"
                    android:id="@+id/postSlogan" />

                <EditText android:id="@+id/post_slogan_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Car:  "
                    android:textColor="#000000"
                    android:id="@+id/postCar" />

                <EditText android:id="@+id/post_car_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Origin:  "
                    android:textColor="#000000"
                    android:id="@+id/postOrigin" />

                <Spinner
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:id="@+id/originPicker"
                    android:spinnerMode="dropdown"
                    android:entries="@array/search_origin"
                    android:layout_below="@+id/imageView"
                    android:layout_alignLeft="@+id/destinationPicker"
                    android:layout_alignStart="@+id/destinationPicker"
                    />
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Destination:  "
                    android:textColor="#000000"
                    android:id="@+id/postDestination" />

                <Spinner
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:id="@+id/destinationPicker"
                    android:spinnerMode="dropdown"
                    android:entries="@array/search_origin"
                    android:layout_below="@+id/imageView"
                    android:layout_alignLeft="@+id/destinationPicker"
                    android:layout_alignStart="@+id/destinationPicker"
                    />
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Departure Date:  "
                    android:textColor="#000000"
                    android:id="@+id/postDepartureDate" />

                <EditText android:id="@+id/post_departure_date_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Number of Seats:  "
                    android:textColor="#000000"
                    android:id="@+id/postNumberOfSeats" />

                <EditText android:id="@+id/post_number_of_seats_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Seats Left:  "
                    android:textColor="#000000"
                    android:id="@+id/postSeatsLeft" />

                <EditText android:id="@+id/post_seats_left_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DETAILS"
                android:id="@+id/textDetails"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Travel Details:  "
                    android:textColor="#000000"
                    android:id="@+id/postRouteDetails" />

                <EditText android:id="@+id/post_route_details_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="138dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Duration:  "
                    android:textColor="#000000"
                    android:id="@+id/postDuration" />

                <EditText android:id="@+id/post_duration_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                tools:context="com.example.vin_s.cargo.PostActivity"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Requirements:  "
                    android:textColor="#000000"
                    android:id="@+id/postRequirements" />

                <EditText android:id="@+id/post_requirements_edit"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="138dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <Button
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/post_submit_button"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
